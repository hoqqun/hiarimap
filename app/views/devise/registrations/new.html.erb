<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 桁以上)</em>
    <% end %><br />
    <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "パスワード" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation,class: "form-control", autocomplete: "off", placeholder: "再度パスワード" %>
  </div>

  <div class="actions">
    <%= f.submit "サインアップ",class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>